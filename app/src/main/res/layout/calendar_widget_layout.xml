<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_rectangle"
    android:orientation="vertical"
    android:paddingLeft="5dip"
    android:paddingRight="5dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp">

        <TextView
            android:id="@+id/yearMonthTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/widget_title_text_size"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/preMonth"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/widget_button_size"
            android:text="&#60;"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/background"
            android:layout_toLeftOf="@+id/nextMonth"
            android:layout_toStartOf="@+id/nextMonth" />
        <TextView
            android:id="@+id/nextMonth"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/widget_button_size"
            android:text="&#62;"
            android:textStyle="bold"
            android:background="@drawable/background"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp"
            android:gravity="center" />
    </RelativeLayout>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="80dip"
        android:gravity="center"
        android:horizontalSpacing="4dip"
        android:numColumns="7"
        android:paddingBottom="5dip"
        android:verticalSpacing="7dip" />
    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/widget_button_size"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

</LinearLayout>